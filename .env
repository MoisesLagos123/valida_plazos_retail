# ==========================================
# CONFIGURACIÓN DEL SERVIDOR
# ==========================================
PORT=3000
NODE_ENV=development

# ==========================================
# BASE DE DATOS
# ==========================================
# Configuración para PostgreSQL
DB_HOST=localhost
DB_PORT=5432
DB_NAME=valida_plazos_retail
DB_USER=postgres
DB_PASSWORD=your_password_here

# Configuración para MongoDB (alternativa)
# MONGODB_URI=mongodb://localhost:27017/valida_plazos_retail

# ==========================================
# AUTENTICACIÓN Y SEGURIDAD
# ==========================================
JWT_SECRET=your_super_secret_jwt_key_here_change_in_production
JWT_EXPIRES_IN=24h
BCRYPT_ROUNDS=12

# Configuración CORS
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# ==========================================
# CONFIGURACIÓN DE SCRAPING
# ==========================================
# User Agent para scraping
USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/91.0.4472.124 Safari/537.36

# Timeouts en milisegundos
SCRAPING_TIMEOUT=30000
SCRAPING_DELAY=2000

# Configuración para proxies (opcional)
# PROXY_HOST=proxy.example.com
# PROXY_PORT=8080
# PROXY_USERNAME=user
# PROXY_PASSWORD=pass

# ==========================================
# RIPLEY CONFIGURACIÓN
# ==========================================
# Configuración específica para Ripley.cl
RIPLEY_BASE_URL=https://simple.ripley.cl
RIPLEY_LOGIN_URL=https://simple.ripley.cl/cuenta/iniciar-sesion
RIPLEY_USERNAME=devscrap2025@gmail.com
RIPLEY_PASSWORD=Dev20252025.

# URLs específicas de Ripley
RIPLEY_ORDERS_URL=https://simple.ripley.cl/mi-cuenta/mis-compras
RIPLEY_PRODUCT_BASE_URL=https://simple.ripley.cl/producto
RIPLEY_SEARCH_URL=https://simple.ripley.cl/buscar

# Configuración de navegación Ripley
RIPLEY_WAIT_TIME=3000
RIPLEY_MAX_RETRIES=3
RIPLEY_SESSION_TIMEOUT=300000

# Headers específicos para Ripley
RIPLEY_USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/120.0.0.0 Safari/537.36
RIPLEY_ACCEPT_LANGUAGE=es-CL,es;q=0.9,en;q=0.8

# ==========================================
# RETAIL ESPECÍFICAS
# ==========================================
# APIs de retailers
RETAIL_API_BASE_URL=https://api.retailer.com/v1
RETAIL_API_KEY=your_retail_api_key_here

# Configuración de plazos
DEFAULT_VALIDATION_DAYS=30
MAX_VALIDATION_DAYS=90
MIN_VALIDATION_DAYS=1

# ==========================================
# LOGGING Y MONITOREO
# ==========================================
LOG_LEVEL=info
LOG_FILE_PATH=logs/app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# ==========================================
# NOTIFICACIONES
# ==========================================
# Email (usando nodemailer)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_app_password_here

# Notificaciones push (opcional)
# FIREBASE_PROJECT_ID=your_project_id
# FIREBASE_PRIVATE_KEY=your_private_key
# FIREBASE_CLIENT_EMAIL=your_client_email

# ==========================================
# CACHÉ Y RENDIMIENTO
# ==========================================
# Redis (para caché)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Configuración de caché
CACHE_TTL=3600
CACHE_MAX_SIZE=100

# ==========================================
# CONFIGURACIÓN DE DESARROLLO
# ==========================================
# Activar/desactivar funciones en desarrollo
DEBUG_MODE=true
ENABLE_SCRAPING_LOGS=true
MOCK_EXTERNAL_APIS=false

# ==========================================
# CONFIGURACIONES EXTERNAS
# ==========================================
# Webhook URLs para notificaciones
WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# API Keys de servicios externos
GOOGLE_MAPS_API_KEY=your_google_maps_api_key
SENDGRID_API_KEY=your_sendgrid_api_key

# ==========================================
# CONFIGURACIÓN DE PRODUCCIÓN
# ==========================================
# Solo descomenta en producción
# FORCE_HTTPS=true
# TRUST_PROXY=true
# SESSION_SECRET=your_session_secret_here